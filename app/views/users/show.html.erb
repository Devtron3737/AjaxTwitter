<h1><%= @user.username %></h1>

<ul>
  <% @user.tweets.each do |tweet| %>
    <li><%= tweet.content %></li/>
  <% end %>
</ul>

<form action="/session" method="POST">
  <input type="hidden" name="_method" value="DELETE">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <input type="submit" value="Logout!">
</form>
